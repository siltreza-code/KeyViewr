<UserControl x:Class="KeyViewer.StatsWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="150"
             Height="80">

    <Border Background="#202020" CornerRadius="6" Padding="8">
        <StackPanel>
            <TextBlock x:Name="KPSBlock" Text="KPS: 0" Foreground="White" FontSize="16"/>
            <TextBlock x:Name="MaxBlock" Text="MAX: 0" Foreground="White" FontSize="16"/>
            <TextBlock x:Name="TotalBlock" Text="TOTAL: 0" Foreground="White" FontSize="16"/>
        </StackPanel>
    </Border>
</UserControl>
