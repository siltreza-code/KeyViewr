<UserControl x:Class="KeyViewer.KeyWidget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="200"
             Height="60">

    <Border Background="#202020" CornerRadius="6" Padding="8">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Border x:Name="ABlock" Background="Gray" CornerRadius="4" Padding="8" Margin="4">
                <TextBlock x:Name="AText" Text="A" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border x:Name="SBlock" Background="Gray" CornerRadius="4" Padding="8" Margin="4">
                <TextBlock x:Name="SText" Text="S" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border x:Name="SemicolonBlock" Background="Gray" CornerRadius="4" Padding="8" Margin="4">
                <TextBlock x:Name="SemicolonText" Text=";" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border x:Name="QuoteBlock" Background="Gray" CornerRadius="4" Padding="8" Margin="4">
                <TextBlock x:Name="QuoteText" Text="'" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
    </Border>
</UserControl>